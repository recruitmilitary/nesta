#header
  %h1
    %a{ :href => "/" }
      = @heading
      %small= @subtitle
  %a{ :href => "http://recruitmilitary.com", :class => "rm" }
    = "RecruitMilitary"
  .clearfix

#content
  - @articles.each do |article|
    = haml :summary, :layout => false, :locals => { :article => article, :heading => :h2 }

#sidebar
  = haml :categories, :layout => false
  = haml :feed, :layout => false
